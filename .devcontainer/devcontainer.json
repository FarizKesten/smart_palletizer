{
  "name": "ros2-noetic-gui",
  "build": {
    "dockerfile": "../Dockerfile"
  },

  // "runArgs": [
  //   "-e", "DISPLAY=host.docker.internal:0",
  //   "-e", "QT_X11_NO_MITSHM=1",
  //   "-e", "LIBGL_ALWAYS_INDIRECT=1",
  //   "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
  //   "-v", "${localEnv:HOME}/.Xauthority:/root/.Xauthority:rw"
  // ],
  "runArgs": [
    "-e", "DISPLAY=:0",
    "-e", "QT_X11_NO_MITSHM=1",
    "-v", "/tmp/.X11-unix:/tmp/.X11-unix",
    "-v", "${localEnv:HOME}/.Xauthority:/home/ros/.Xauthority:rw"
  ],

  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    // "source=/tmp/.X11-unix,target=/tmp/.X11-unix",
    // "source=${localEnv:HOME}/.Xauthority,target=/root/.Xauthority"
  ],

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-iot.vscode-ros",
        "ms-vscode.cpptools"
      ]
    }
  },
  "workspaceFolder": "/workspace",
  "postCreateCommand": "bash -c 'source /opt/ros/noetic/setup.bash && roscore'"
}
